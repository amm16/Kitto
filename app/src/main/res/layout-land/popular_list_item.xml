<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_height="wrap_content"
        android:padding="8dp"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
            android:id="@+id/movie_item_image"
            android:layout_width="180dp"
            android:layout_height="220dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <android.support.constraint.ConstraintLayout
            android:id="@+id/blue_container"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:layout_constraintLeft_toLeftOf="@id/movie_item_image"
            app:layout_constraintRight_toRightOf="@id/movie_item_image"
            app:layout_constraintBottom_toBottomOf="@id/movie_item_image">
        <android.support.constraint.ConstraintLayout
                android:id="@+id/rank_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foregroundGravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
            <TextView
                    android:id="@+id/movie_item_numeral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:foregroundGravity="center_horizontal"
                    android:background="@color/colorPrimary"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="4"
                    android:text="#"
                    android:gravity="center"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:id="@+id/movie_item_popularity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:foregroundGravity="center_horizontal"
                    android:background="@color/colorPrimary"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="4"
                    tools:text="111"
                    android:gravity="center"
                    app:layout_constraintLeft_toRightOf="@id/movie_item_numeral"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="4dp"/>

        </android.support.constraint.ConstraintLayout>
        <TextView
                android:id="@+id/movie_item_title"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:background="@color/colorPrimary"
                tools:text="Star Wars: Episode VII - The Force Awakens"
                android:padding="4dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rank_container"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>