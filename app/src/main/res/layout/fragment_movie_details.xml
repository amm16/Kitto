<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              tools:context=".ui.MovieDetailsFragment"
              android:layout_marginBottom="5dp">
    <FrameLayout
            android:id="@+id/youtube_player_fragment"
            android:name="com.google.android.youtube.player.YouTubePlayerSupportFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:layout_marginBottom="5dp"
            app:layout_constraintTop_toBottomOf="@+id/youtube_player_fragment">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <android.support.constraint.ConstraintLayout
                    android:id="@+id/movie_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@color/colorAccent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                <ImageView
                        android:id="@+id/movie_poster"
                        android:layout_width="113dp"
                        android:layout_height="131dp"
                        android:foregroundGravity="center_vertical"
                        app:layout_constraintTop_toTopOf="@id/movie_header"
                        app:layout_constraintLeft_toLeftOf="@+id/movie_header"
                        app:layout_constraintBottom_toBottomOf="@id/movie_header"/>

                <TextView
                        android:id="@+id/movie_title"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:maxLines="2"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        tools:text="Star Wars: Episode VII - The Force Awakens"
                        app:layout_constraintTop_toTopOf="@id/movie_header"
                        app:layout_constraintLeft_toRightOf="@id/movie_poster"
                        app:layout_constraintRight_toRightOf="@id/movie_header"
                        app:layout_constraintBottom_toBottomOf="@id/movie_header"/>
                <TextView
                        android:id="@+id/movie_genre"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        tools:text="Action, Adventure, Fantasy, Sci-Fi"
                        android:maxLines="1"
                        android:ellipsize="end"
                        app:layout_constraintLeft_toLeftOf="@id/movie_title"
                        app:layout_constraintTop_toBottomOf="@id/movie_title"/>
                <TextView
                        android:id="@+id/movie_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        tools:text="2015"
                        app:layout_constraintTop_toBottomOf="@id/movie_genre"
                        app:layout_constraintLeft_toLeftOf="@id/movie_genre"/>
                <TextView
                        android:id="@+id/movie_runtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        tools:text="136 min"
                        android:gravity="center_vertical"
                        app:layout_constraintTop_toBottomOf="@id/movie_genre"
                        app:layout_constraintRight_toLeftOf="@+id/movie_rated"
                        app:layout_constraintLeft_toRightOf="@id/movie_year"/>
                <TextView
                        android:id="@+id/movie_rated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        tools:text="PG-13"
                        app:layout_constraintTop_toBottomOf="@id/movie_genre"
                        app:layout_constraintRight_toRightOf="@id/movie_genre"/>
                <!--<ImageView
                        android:id="@+id/star_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_star_blue_24dp"
                        app:layout_constraintLeft_toLeftOf="@id/movie_year"
                        app:layout_constraintTop_toBottomOf="@id/movie_rated"/>
                <TextView
                        android:id="@+id/movie_vote_average"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        tools:text="9.8"
                        app:layout_constraintTop_toTopOf="@id/star_icon"
                        app:layout_constraintLeft_toRightOf="@id/star_icon"
                        app:layout_constraintBottom_toBottomOf="@id/star_icon"
                        android:layout_marginLeft="4dp"/>-->
            </android.support.constraint.ConstraintLayout>
            <!--Ratings Container -->
            <android.support.constraint.ConstraintLayout
                    android:id="@+id/ratings_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foregroundGravity="center_vertical"
                    android:background="@color/colorPrimaryDark"
                    android:padding="5dp"
                    app:layout_constraintTop_toBottomOf="@id/movie_header"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">
                <android.support.constraint.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:foregroundGravity="center_vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">
                    <ImageView
                            android:id="@+id/imdb_icon"
                            android:layout_width="45dp"
                            android:layout_height="39dp"
                            android:src="@drawable/ic_imdb_square"
                            android:contentDescription="@string/content_imdb"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                            android:id="@+id/imdb_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                            tools:text="8.0"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/imdb_icon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"/>
                    <ImageView
                            android:id="@+id/rotten_tomatoes_icon"
                            android:layout_width="28dp"
                            android:layout_height="45dp"
                            android:src="@drawable/ic_rotten_tomatoes"
                            app:layout_constraintLeft_toRightOf="@id/imdb_rating"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginStart="20dp"/>
                    <TextView
                            android:id="@+id/rotten_tomatoes_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                            tools:text="92%"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/rotten_tomatoes_icon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp">
                    </TextView>
                    <ImageView
                            android:id="@+id/metacritic_icon"
                            android:layout_width="47dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_metacritic"
                            app:layout_constraintLeft_toRightOf="@id/rotten_tomatoes_rating"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginStart="20dp"/>
                    <TextView
                            android:id="@+id/metacritic_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                            tools:text="81"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/metacritic_icon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginLeft="5dp"/>

                </android.support.constraint.ConstraintLayout>
            </android.support.constraint.ConstraintLayout>
            <!--End of Ratings Container -->

            <android.support.constraint.ConstraintLayout
                    android:id="@+id/extra_info_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/ratings_container"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">
                <TextView
                        android:id="@+id/movie_overview"
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        tools:text="Three decades after the Empire's defeat, a new threat arises in the militant First Order. Defected stormtrooper Finn and the scavenger Rey are caught up in the Resistance's search for the missing Luke Skywalker."
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" android:scrollbarStyle="outsideInset"/>
                <!--Language Container-->
                <android.support.constraint.ConstraintLayout
                        android:id="@+id/release_date_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:foregroundGravity="center_horizontal"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/movie_overview"
                        android:layout_marginTop="10dp">
                    <TextView
                            android:id="@+id/movie_release_date_label"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="@string/release_date_label"
                            android:textSize="14sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                            android:id="@+id/movie_release_date"
                            android:layout_width="260dp"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            tools:text="Lawrence Kasdan, J.J. Abrams, Michael Arndt, George Lucas (based on characters created by)"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                            app:layout_constraintLeft_toRightOf="@id/movie_release_date_label"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"/>

                </android.support.constraint.ConstraintLayout>
                <!--Writers Container -->
                <android.support.constraint.ConstraintLayout
                        android:id="@+id/writers_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:foregroundGravity="center_horizontal"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/release_date_container"
                        android:layout_marginTop="10dp">
                    <TextView
                            android:id="@+id/movie_writers_label"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="@string/writers_label"
                            android:textSize="14sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                            android:id="@+id/movie_writers"
                            android:layout_width="260dp"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            tools:text="Lawrence Kasdan, J.J. Abrams, Michael Arndt, George Lucas (based on characters created by)"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                            app:layout_constraintLeft_toRightOf="@id/movie_writers_label"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginLeft="5dp"/>

                </android.support.constraint.ConstraintLayout>

                <!--Director Container -->
                <android.support.constraint.ConstraintLayout
                        android:id="@+id/director_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:foregroundGravity="center_horizontal"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/writers_container"
                        android:layout_marginTop="10dp">
                    <TextView
                            android:id="@+id/movie_director_label"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="@string/director_label"
                            android:textSize="14sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                            android:id="@+id/movie_director"
                            android:layout_width="260dp"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            tools:text="Lawrence Kasdan, J.J. Abrams, Michael Arndt, George Lucas (based on characters created by)"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                            app:layout_constraintLeft_toRightOf="@id/movie_director_label"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"/>

                </android.support.constraint.ConstraintLayout>
                <!--Actors Container-->
                <android.support.constraint.ConstraintLayout
                        android:id="@+id/actors_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:foregroundGravity="center_horizontal"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/director_container"
                        android:layout_marginTop="10dp">
                    <TextView
                            android:id="@+id/movie_actors_label"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="@string/actors_label"
                            android:textSize="14sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                            android:id="@+id/movie_actors"
                            android:layout_width="260dp"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            tools:text="Lawrence Kasdan, J.J. Abrams, Michael Arndt, George Lucas (based on characters created by)"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                            app:layout_constraintLeft_toRightOf="@id/movie_actors_label"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"/>

                </android.support.constraint.ConstraintLayout>
                <!--Language Container-->
                <android.support.constraint.ConstraintLayout
                        android:id="@+id/language_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:foregroundGravity="center_horizontal"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/actors_container"
                        android:layout_marginTop="10dp">
                    <TextView
                            android:id="@+id/movie_language_label"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="@string/language_label"
                            android:textSize="14sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                            android:id="@+id/movie_language"
                            android:layout_width="260dp"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            tools:text="Lawrence Kasdan, J.J. Abrams, Michael Arndt, George Lucas (based on characters created by)"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                            app:layout_constraintLeft_toRightOf="@id/movie_language_label"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"/>

                </android.support.constraint.ConstraintLayout>
                <!--Country Container-->
                <android.support.constraint.ConstraintLayout
                        android:id="@+id/country_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:foregroundGravity="center_horizontal"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/language_container"
                        android:layout_marginTop="10dp">
                    <TextView
                            android:id="@+id/movie_country_label"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="@string/country_label"
                            android:textSize="14sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                            android:id="@+id/movie_country"
                            android:layout_width="260dp"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            tools:text="Lawrence Kasdan, J.J. Abrams, Michael Arndt, George Lucas (based on characters created by)"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                            app:layout_constraintLeft_toRightOf="@id/movie_country_label"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"/>
                    <!--Awards Container-->
                    <android.support.constraint.ConstraintLayout
                            android:id="@+id/awards_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:foregroundGravity="center_horizontal"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/country_container"
                            android:layout_marginTop="10dp">
                        <TextView
                                android:id="@+id/movie_awards_label"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:text="@string/awards_label"
                                android:textSize="14sp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>
                        <TextView
                                android:id="@+id/movie_awards"
                                android:layout_width="260dp"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                tools:text="Lawrence Kasdan, J.J. Abrams, Michael Arndt, George Lucas (based on characters created by)"
                                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                app:layout_constraintLeft_toRightOf="@id/movie_awards_label"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp"/>

                    </android.support.constraint.ConstraintLayout>

                </android.support.constraint.ConstraintLayout>
            </android.support.constraint.ConstraintLayout>


        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>